<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/designacts"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonInform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_dialog_info"
            android:backgroundTint="@color/black"
            android:onClick="funcInform"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonClearEverything"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="funcClearEverything"
            android:paddingTop="24dp"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttonEraseOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_input_delete"
            android:backgroundTint="@color/black"
            android:drawablePadding="8dp"
            android:onClick="funcOneEarse"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttons"
            android:onClick="funcOperators"
            android:text="/"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/designacts"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="60sp"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="60sp" />


        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttons"
            android:onClick="funcOperators"
            android:text="+"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/designacts"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttons"
            android:onClick="funcOperators"
            android:text="x"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/designacts"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttons"
            android:onClick="funcOperators"
            android:text="-"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/designacts"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designacts"
            android:onClick="numberFunc"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonXPowTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttons"
            android:onClick="funcXPowTwo"
            android:text="^2"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonPow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttons"
            android:onClick="funcOperators"
            android:text="^"
            android:textSize="60sp" />

        <Button
            android:id="@+id/buttonResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttons"
            android:onClick="funcEqual"
            android:text="="
            android:textSize="60sp" />

    </LinearLayout>

</LinearLayout>